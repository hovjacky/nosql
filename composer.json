{
    "name": "hovjacky/nosql",
    "description": "PHP Client for Elasticsearch (MongoDB and Cassandra are almost finished) - easy and unified queries",
    "license": "MIT",
    "keywords": ["nosql","elasticsearch"],
    "homepage": "https://github.com/hovjacky/nosql",
    "authors": [
        {
            "name": "Ondrej Hovjacky",
            "email": "hovjacky.ondrej@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2 <8.3",
        "ext-mbstring": "*",
        "elasticsearch/elasticsearch": "^7.15.0",
        "tracy/tracy": "^2.8"
    },
    "autoload": {
        "psr-4": { "Hovjacky\\NoSQL\\": "src" }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpstan/phpstan": "^1.10.15"
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon --memory-limit=256M"
    }
}
